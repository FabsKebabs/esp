local ExpanderEnabled = true -- Example condition for match being active, adjust as needed

function updateESP()
    while ExpanderEnabled do
        wait(0.1)
        for _, player in ipairs(game.Players:GetPlayers()) do
            if player ~= LocalPlayer and player.Team ~= LocalPlayer.Team then
                local character = player.Character
                local rootPart = character and character:FindFirstChild("HumanoidRootPart")
                if rootPart then
                    -- Display ESP circles or markers here
                    -- Ensure the ESP is active only in the match, similar to the hitbox logic
                    -- You can add conditions to check if the match is ongoing
                    if isInMatch() then
                        showESP(rootPart)  -- Show ESP on the player
                    else
                        hideESP(rootPart)  -- Hide ESP if match is not active
                    end
                end
            end
        end
    end
end

-- Example function to determine if the player is in the match
function isInMatch()
    -- Replace this with your logic to check if the match is ongoing
    -- Example: Check if match timer is active or certain conditions are met
    return game:GetService("Players").LocalPlayer:FindFirstChild("InMatch") ~= nil
end

